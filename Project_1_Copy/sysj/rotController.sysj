import run.BottleTwin;

rotController(
		input signal turn;

		input signal tableAlignedWithSensorC;
		output signal rotaryTableTrigger, rotTableTurned;
		)
->{
    System.out.println("Controller startedh");
	{
		// pusher control
		while(true){
			await(turn);

			abort(tableAlignedWithSensorC){
				sustain rotaryTableTrigger;
			}
			emit rotTableTurned;
			await(!turn);
		}
	}
}
