import run.BottleTwin;

conveyorController(
		input signal move;

		input signal bottleAtPos1, bottleLeftPos5;
		output signal motConveyorOnOff;
		output signal conveyorMoving, conveyorStop, conveyorMoved;
		)
->{
	{
		while(true){
			await(move);
			await(!bottleAtPos1);
			abort(bottleAtPos1){
				emit conveyorMoving;
				sustain motConveyorOnOff;
			}
			emit conveyorMoved;
			emit conveyorStop;
		}
	}
}

